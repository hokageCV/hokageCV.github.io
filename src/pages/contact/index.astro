---
import ContactForm from '@/components/ContactForm.astro'
import socials from '@/data/socials'
import Base from '@/layouts/Base.astro'

import ResumeBtn from './ResumeBtn.astro'
---

<Base>
  <section>
    <ul>
      {
        socials.map((social) => (
          <li>
            <a href={social.url} target='_blank'>
              {social.label}
            </a>
          </li>
        ))
      }
      <ResumeBtn />
    </ul>
    <ContactForm />
  </section>
</Base>

<style>
  section {
    width: 100%;
    padding: var(--space-s);
    margin: var(--space-m);
    margin-top: 0;
    padding-top: 0;

    ul {
      display: flex;
      list-style: none;
      gap: var(--space-m);
    }

    @media (min-width: 768px) {
      width: 50%;
    }
  }
</style>
