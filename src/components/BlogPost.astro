---
import { readableDate } from '@/utils/date'
import BlogPostTags from './BlogPostTags.astro'

const { data, render } = Astro.props
const { Content } = await render()
---

<div>
  <small>{readableDate(data.publishedDate)}</small>
  <h1>{data.title}</h1>
  <article>
    <Content />
  </article>
  <hr />
  {data.tags && <BlogPostTags tags={data.tags} />}
</div>

<style>
  small {
    opacity: 0.6;
  }
  hr {
    margin-bottom: var(--space-xs);
    opacity: 0.5;
  }
</style>
