---
const { data, render } = Astro.props
const { Content } = await render()
---

<div>
  <h1>{data.title}</h1>
  {
    data.cover.image ? (
      <img src={data.cover.image} alt={data.cover.alt} />
    ) : (
      <video src={data.cover.video} autoplay loop muted playsinline/>
    )
  }
  <article>
    <Content />
  </article>
</div>
