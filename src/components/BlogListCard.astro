---
import { readableDate } from '@/utils/date'

const { post } = Astro.props
const url = `/blogs/${post.slug}`
---

<li>
  <div>
    <small>{readableDate(post.data.publishedDate, 'dd-LL-yyyy')}</small>
    <p>
      <a href={url}>{post.data.title}</a>
    </p>
  </div>
</li>

<style>
  li {
    list-style: none;

    div {
      display: flex;
      flex-direction: row;
      justify-content: start;
      align-items: center;
      gap: 5px;

      small {
        font-size: var(--step--2);
        color: grey;
      }
    }

    a {
      text-decoration: none;
    }
  }
</style>
